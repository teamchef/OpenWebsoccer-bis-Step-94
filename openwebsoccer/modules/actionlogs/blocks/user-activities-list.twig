{% import "messagebox.twig" as messagebox %}

{% if activities is defined and activities|length > 0 %}

	<table class="table table-striped">
	{% for activity in activities %}
		
		<tr>
			<td><small>{{ env.getFormattedDatetime(activity.created_date) }}</small> {{ i18n.getMessage("activitylog_" ~ activity.action_id)|format(activity.user_name)}}<br>
			</td>
		</tr>

	{% endfor %}

	</table>

{% else %}
	{{ messagebox.box(i18n.getMessage("activities_none_available_for_user"), "", "info") }}
{% endif %}